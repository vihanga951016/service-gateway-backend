<configuration>

    <!-- Console appender -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>SERVICE GATEWAY %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the root logger level and appender -->
    <root level="INFO">
        <appender-ref ref="console" />
    </root>

</configuration>